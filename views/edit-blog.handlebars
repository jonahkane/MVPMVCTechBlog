<article>
  <section>
    <div>
      <h2>
        Edit Blog
      </h2>
    </div>
    <div>
      <form>
        <div>
          <label for="blog-title">Title</label>
          <input
            type="text"
            name="blog-title"
            id="blog-title"
            value="{{blog.title}}"
          />
        </div>
        <div>
          <label for="blog-content">Content</label>
          <textarea
            class="entry-field"
            id="blog-content"
            name="blog-content"
          >{{blog.content}}</textarea>
        </div>
        <button type="submit">Update blog</button>
        <button type="button" class="delete-blog-btn">Delete blog</button>
      </form>
    </div>
  </section>
</article>

{{#if loggedIn}}
  <script src="/js/edit-blog.js"></script>{{/if}}
<script src="/js/delete-blog.js"></script>